<% include header.ejs%>

<div class="panel panel-default">
    <div class="panel-heading"><h3>POS后台管理系统</h3></div>
    <% if (success) { %>
    <div><%= success %></div>
    <% } %>
    <% if (error) { %>
    <div><%= error %> </div>
    <% } %>
    <div class="panel-body">
        <div style="border: 1px solid #a9a9a9;width: 20%;height: 500px; background: #a9a9a9;float:left;">
            <a href="/admin " style="color: #000000;"><div style="border: 1px solid #c0c0c0;width: 100%;height: 40px;"><h4 style="text-align: center">商品管理</h4></div></a>
            <a href="#" style="color: #000000;"><div style="border: 1px solid #c0c0c0;width: 100%;height: 40px;"><h4 style="text-align: center">折扣活动</h4></div></a>
        </div>
        <div>
            <a href="/admin">商品信息管理</a> >><a href="/gooddetail/?good_name=<%=good_name%>"><%=good_name%></a>  >><span>添加属性</span>
        </div>

        <div class="col-md-6 col-md-offset-2" style="margin-top: 100px;">
            <form class="form-horizontal form_attr" role="form" method="post">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">属性名: </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="name" placeholder="属性名" autofocus="true">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">属性值: </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="value" placeholder="属性值">
                    </div>
                </div>
                <div class="row">
                    <div class="rol-md-12 col-md-offset-2">
                        <button type="submit" class="btn btn-primary" onclick="return attr_check()">保存</button>
                        <a href="/addgood" class="btn btn-primary" style="margin-left: 50px;" role="button">取消</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
</div>

<% include footer.ejs%>