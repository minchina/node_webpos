<% include header.ejs%>
<div class="panel panel-default">
    <div class="panel-heading"><h3>POS后台管理系统</h3></div>
    <div class="panel-body">
        <div style="border: 1px solid #a9a9a9;width: 20%;height: 500px; background: #a9a9a9;float:left;">
            <a href="/admin " style="color: #000000;"><div style="border: 1px solid #c0c0c0;width: 100%;height: 40px;"><h4 style="text-align: center">商品管理</h4></div></a>
            <a href="#" style="color: #000000;"><div style="border: 1px solid #c0c0c0;width: 100%;height: 40px;"><h4 style="text-align: center">折扣活动</h4></div></a>
        </div>
            <div style="float: right;height: 500px;width: 80%;border: 1px solid #808080">
                <div class="panel panel-default">
                    <span><h5>商品信息管理</h5></span><br>
                    <a type="button" class="btn btn-primary" href="/addgood">添加商品</a>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>商品名称</th>
                                <th>商品数量</th>
                                <th>单价(元)</th>
                                <th>单位</th>
                                <th>发布时间</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% goods.forEach(function(shop,index){ %>
                            <tr>
                                <td><%= index +1%></td>
                                <td><%= shop.name %></td>
                                <td><form method="post">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default">-</button>
                                        <input style="width: 50px;" type="text" class="btn btn-default shopNum" name="num" placeholder="<%= shop.count %>">
                                        <button type="button" class="btn btn-default">+</button>
                                    </div>
                                </form>
                                </td>
                                <td><%= shop.price %></td>
                                <td><%= shop.unit %></td>
                                <td class="hidden item-barcode"><%= shop.barcode %></td>
                                <td>12:33</td>
                                <td><a href="#">详情</a>
                                <a href="#">删除</a>
                                </td>
                            </tr>
                            <% })%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>
</div>




<% include footer.ejs%>